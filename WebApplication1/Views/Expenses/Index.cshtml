@model IEnumerable<EvimCebim.Models.Expense>

@{
    ViewData["Title"] = "Giderlerim";

    // --- C# İLE VERİ ANALİZİ ---
    // 1. Toplam Harcama Tutarı
    var totalAmount = Model.Sum(x => x.Amount);

    // 2. Grafik İçin Verileri Hazırlama (Kategoriye Göre Grupla ve Topla)
    var chartData = Model
        .GroupBy(x => x.Category)
        .Select(g => new
        {
            Category = g.Key,
            Total = g.Sum(e => e.Amount)
        })
        .ToList();

    // 3. Verileri JavaScript'in anlayacağı formata (Virgülle ayrılmış string) çevirme
    var labels = string.Join(",", chartData.Select(x => "'" + x.Category + "'"));
    var dataValues = string.Join(",", chartData.Select(x => x.Total.ToString(System.Globalization.CultureInfo.InvariantCulture)));
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fa-solid fa-chart-pie me-2 text-primary"></i>Gider Kontrol Paneli</h1>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow">
            <i class="fa-solid fa-plus me-2"></i>Yeni Harcama Ekle
        </a>
    </div>

    <div class="row mb-4">

        <div class="col-md-6">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="card text-white bg-success shadow h-100">
                        <div class="card-body text-center">
                            <h5 class="card-title"><i class="fa-solid fa-wallet me-2"></i>Toplam Harcama</h5>
                            <p class="card-text display-6 fw-bold">@totalAmount.ToString("N2") ₺</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card text-white bg-info shadow h-100">
                        <div class="card-body text-center">
                            <h5 class="card-title"><i class="fa-solid fa-list-ol me-2"></i>İşlem Adedi</h5>
                            <p class="card-text display-6 fw-bold">@Model.Count()</p>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="alert alert-light border shadow-sm">
                        <i class="fa-solid fa-lightbulb text-warning me-2"></i>
                        <strong>İpucu:</strong> Harcamalarınızı kategorilere ayırarak grafikteki dağılımı daha net görebilirsiniz.
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="fa-solid fa-chart-pie me-2"></i>Kategori Dağılımı</h5>
                </div>
                <div class="card-body">
                    <div style="height: 250px;">
                        <canvas id="expenseChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-light">
            <h5 class="mb-0 text-muted"><i class="fa-solid fa-table me-2"></i>Harcama Listesi</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Title)</th>
                        <th>@Html.DisplayNameFor(model => model.Amount)</th>
                        <th>@Html.DisplayNameFor(model => model.Date)</th>
                        <th>@Html.DisplayNameFor(model => model.Category)</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle fw-bold">@Html.DisplayFor(modelItem => item.Title)</td>
                            <td class="align-middle">
                                <span class="badge bg-success" style="font-size: 0.9rem;">
                                    @Html.DisplayFor(modelItem => item.Amount) ₺
                                </span>
                            </td>
                            <td class="align-middle">
                                <i class="fa-regular fa-calendar text-muted me-1"></i>
                                @item.Date.ToString("dd.MM.yyyy")
                            </td>
                            <td class="align-middle">
                                <span class="badge bg-secondary rounded-pill">
                                    @Html.DisplayFor(modelItem => item.Category)
                                </span>
                            </td>
                            <td class="text-end align-middle">
                                <div class="btn-group shadow-sm" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-white" title="Düzenle">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white" title="Detay">
                                        <i class="fa-solid fa-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Sil">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    // Sayfa yüklendiğinde çalışır
    document.addEventListener("DOMContentLoaded", function () {
        var ctx = document.getElementById('expenseChart').getContext('2d');

        var myChart = new Chart(ctx, {
            type: 'doughnut', // Grafik Tipi: Pasta (pie) veya Halka (doughnut)
            data: {
                labels: [@Html.Raw(labels)], // C#'dan gelen kategoriler
                datasets: [{
                    label: 'Harcama Tutarı (₺)',
                    data: [@Html.Raw(dataValues)], // C#'dan gelen tutarlar
                    backgroundColor: [
                        '#2c3e50', '#e74c3c', '#3498db', '#f1c40f', '#2ecc71', '#9b59b6', '#e67e22'
                    ],
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'right', // Açıklamalar sağda dursun
                    }
                }
            }
        });
    });
</script>
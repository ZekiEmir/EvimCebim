@model EvimCebim.Models.Expense

@{
    ViewData["Title"] = "Düzenle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-0">

                <div class="card-header bg-warning text-white p-3">
                    <h3 class="mb-0 text-center">
                        <i class="fa-solid fa-pen-to-square me-2"></i>Harcamayı Düzenle
                    </h3>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold text-muted">Harcama Başlığı</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-receipt text-warning"></i></span>
                                <input asp-for="Title" class="form-control" placeholder="Örn: Market Alışverişi" />
                            </div>
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Amount" class="form-label fw-bold text-muted">Tutar</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fa-solid fa-turkish-lira-sign text-success"></i></span>
                                    <input asp-for="Amount" class="form-control" type="number" step="0.01" />
                                </div>
                                <span asp-validation-for="Amount" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Date" class="form-label fw-bold text-muted">Tarih</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fa-regular fa-calendar-days text-info"></i></span>
                                    <input asp-for="Date" class="form-control" type="date" />
                                </div>
                                <span asp-validation-for="Date" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Category" class="form-label fw-bold text-muted">Kategori</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-layer-group text-primary"></i></span>
                                <input asp-for="Category" class="form-control" />
                            </div>
                            <span asp-validation-for="Category" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg text-white">
                                <i class="fa-solid fa-check me-2"></i>Değişiklikleri Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fa-solid fa-arrow-left me-2"></i>Vazgeç
                            </a>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}